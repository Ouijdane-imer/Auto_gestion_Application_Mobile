<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="#5EFDFF8F">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimage"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="170dp"
            android:layout_height="79dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Title"
            android:textColor="@color/bleu"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recCode"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mMenus"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="86dp"
            android:layout_toEndOf="@id/recTitle"
            android:text="code"
            android:textAlignment="center"
            android:textColor="@color/bleu"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/titreCode"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/recTitle"
            android:fontFamily="sans-serif-black"
            android:text="Code "
            android:textAlignment="center"
            android:textColor="@color/bleu"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/quantite"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="35dp"
            android:layout_toEndOf="@id/recTitle"
            android:text="Quantite"
            android:textAlignment="center"
            android:textColor="@color/bleu"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/prix"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-82dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@id/recTitle"
            android:text="Prix"
            android:textAlignment="center"
            android:textColor="@color/bleu"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/quantitetitre"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:layout_toEndOf="@id/recTitle"
            android:fontFamily="sans-serif-black"
            android:text="Quantite"
            android:textAlignment="center"
            android:textColor="@color/bleu"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Prixtitre2"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-163dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="22dp"
            android:layout_toEndOf="@id/recTitle"
            android:fontFamily="sans-serif-black"
            android:text="Prix"
            android:textAlignment="center"
            android:textColor="@color/bleu"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/prixeuro"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-23dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recTitle"
            android:fontFamily="sans-serif-black"
            android:text="â‚¬"
            android:textAlignment="center"
            android:textColor="@color/bleu"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/mMenus"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="1dp"
            android:longClickable="true"
            android:src="@drawable/ic_more" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>